#include<stdio.h>
#include <stdlib.h>

int main()
{
    int n;
    scanf("%d",&n);
    int i,f=1,l=n*n,count;
    for(i=0;i<n;i++)
    {
        for(count=0;count<n;count++)
        {
            printf("%d ",l);
            count++;
            if(count<n)
            {
                printf("%d ",f);
                f++;
            }
            l--;
        }
        printf("\n");
    }
}

INPUT:
5

OUTPUT:
25 1 24 2 23
22 3 21 4 20
19 5 18 6 17
16 7 15 8 14
13 9 12 10 11